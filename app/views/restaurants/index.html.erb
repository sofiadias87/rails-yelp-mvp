<h1>Restaurants</h1>
<div class="row row-cols-1 row-cols-md-4 g-4">
        <% @restaurants.each do |restaurant| %>
          <div class="col">
            <div class="card" h-100 ">
              <div class="card-body">
                <h5 class="card-title"><%= restaurant.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.address %></h6>
                <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.phone_number %></h6>
                <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <div>
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-warning" %>
</div>
